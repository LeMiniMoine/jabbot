<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="chatrooms" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <bean class="org.wanna.jabbot.Chatroom">
                    <!-- Name of the bot in the chatroom. -->
                    <constructor-arg value="Jabbot"/>
                    <!-- uri of the chatroom to join -->
                    <constructor-arg value="test_room@conference.hostname"/>
                </bean>
            </list>
        </constructor-arg>
    </bean>
</beans>