<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="jiraProperties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="locations">
            <list>
                <value>classpath*:/jira.properties</value>
            </list>
        </property>
    </bean>

    <bean id="helpCommand" class="org.wanna.jabbot.command.HelpCommand"/>
    <bean id="attackCommand" class="org.wanna.jabbot.command.AttackCommand"/>
    <bean id="versionCommand" class="org.wanna.jabbot.command.VersionCommand"/>
    <bean id="jiraCommand" class="org.wanna.jabbot.command.IssueViewer">
        <property name="jiraUrl" value="${jira.url}"/>
        <property name="username" value="${jira.username}"/>
        <property name="password" value="${jira.password}"/>
    </bean>
</beans>